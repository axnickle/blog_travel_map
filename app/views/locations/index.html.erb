<h1>Listing all locations</h1>

<table>
 <tr>
  <th>Name</th>
  <th>Description</th>
  <th>Longitude</th>
  <th>Latitude</th>
  <th>City</th>
  <th>State</th>
  <th>Country</th>
  <th>visit date</th>
  <th>Actions</th>
 </tr>
 <% @locations.each do |location| %>
 <tr>
  <td><%= location.name %></td>
  <td><%= location.description %></td>
  <td><%= location.longitude%></td>
  <td><%= location.latitude %></td>
  <td><%= location.city %></td>
  <td><%= location.state %></td>
  <td><%= location.country %></td>
  <td><%= location.visit_date %></td>
  <td><%= link_to 'Show', location_path(location) %></td>
 </tr>
 <% end %>
</table>
